<Window x:Class="DEFCALC.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Images/app_icon.ico">
    <Grid>
        <Canvas Width="280" Height="150">
            <TextBlock Text="Логин:" Canvas.Left="47" Canvas.Top="30" />
            <TextBlock Text="Пароль:" Canvas.Left="40" Canvas.Top="70" />
            <TextBox x:Name="txtLogin" Canvas.Left="90" Canvas.Top="28" Width="150" />
            <PasswordBox x:Name="txtPassword" Canvas.Left="90" Canvas.Top="68" Width="150"  />
            <Label x:Name="lblWarning" Foreground="Red" FontSize="10" Canvas.Left="85" Canvas.Top="88" />
            <Button x:Name="bntLogin" Click="bntLogin_Click" Content="Войти" Canvas.Left="90" Canvas.Top="115" Width="150" Height="25" />
        </Canvas>
    </Grid>
</Window>
